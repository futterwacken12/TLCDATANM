@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Master._DeleteItemViewModel
@{
    ViewBag.Title = "Eliminar Rubro";
    ViewBag.PageIcon = "trash-o";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("_DeleteItem", "Master", FormMethod.Post);
}

@section Styles
{
    <style>
        form {
            margin: 0 0 0px !important;
        }
    </style>
}

@Html.AntiForgeryToken()
@Html.HiddenFor(x => x.ItemId)

<p>¿Está seguro de eliminar el rubro <b>@Model.Description</b>?</p>

@section Footer
{
    <button id="save" type="submit" class="btn btn-primary"><i class="icon icon-save"></i> Guardar</button>
}