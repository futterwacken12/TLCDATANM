@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Master._DeleteFamilyViewModel
@{
    ViewBag.Title = "Eliminar Familia";
    ViewBag.PageIcon = "trash";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("_DeleteFamily", "Master", FormMethod.Post);
}

@section Styles
{
    <style>
        form {
            margin: 0 0 0px !important;
        }
    </style>
}

@Html.AntiForgeryToken()
@Html.HiddenFor(x => x.FamilyId)

<p>¿Está seguro de eliminar la familia <b>@Model.Description</b>?</p>

@section Footer
{
    <button id="save" type="submit" class="btn btn-primary"><i class="icon icon-save"></i> Guardar</button>
}