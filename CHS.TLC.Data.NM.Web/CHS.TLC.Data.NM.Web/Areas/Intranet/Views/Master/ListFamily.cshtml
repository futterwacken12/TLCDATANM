@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Master.ListFamilyViewModel

@{
    ViewBag.Title = "Lista de Familia";
    ViewBag.PageIcon = "arrow-right";
}

@section Breadcrumbs{
}

<div class="row-fluid">
    <div class="span12 box bordered-box blue-border">
        <div class="box-header blue-background">
            <div class="title">
                <i class="icon-filter"></i>
                Filtros
            </div>
        </div>
        <div class="box-content box-double-padding">
            <form class="form" style="margin-bottom: 0;">
                <fieldset>
                    <div class="span6">
                        <strong>Descripción</strong>
                        @Html.TextBoxFor(x => x.Name, new { @class = "span12" })
                    </div>
                </fieldset>

                <hr class="hr-normal">

                <div class="form-actions" style="margin-bottom: 0;">
                    <div class="text-right">
                        <div class="btn btn-primary btn-large">
                            <i class="icon-save"></i>
                            Filtrar
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class='row-fluid'>
    <div class='span12 box bordered-box red-border' style='margin-bottom:0;'>
        <div class='box-header red-background'>
            <div class='title'><i class="icon icon-list"></i> Listado</div>
            <div class='actions'>
                <a href="#" class="btn box-remove btn-mini btn-link">
                    <i class='icon-remove'></i>
                </a>
                <a href="#" class="btn box-collapse btn-mini btn-link">
                    <i></i>
                </a>
            </div>
        </div>
        <div class='box-content box-no-padding'>
            <div class='responsive-table'>
                <div class='scrollable-area'>
                    <table class='table table-hover table-striped' style='margin-bottom:0;'>
                        <thead>
                            <tr>
                                <th>
                                    Descripción
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Opciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var family in Model.ListFamily)
                            {
                                <tr>
                                    <td>@family.Description</td>
                                    <td>
                                        @Html.Raw(ConstantHelpers.ESTADO.GetLabelEstado(ConstantHelpers.ESTADO.ACTIVO))
                                    </td>
                                    <td>
                                        <div class='btn-group' style='margin-bottom:5px'>
                                            <a href="#" class='btn'>Editar</a>
                                            <button class='btn dropdown-toggle' data-toggle='dropdown'>
                                                <span class='caret'></span>
                                            </button>
                                            <ul class='dropdown-menu'>
                                                <li>
                                                    <a href='#'>Editar</a>
                                                </li>
                                                <li>
                                                    <a href='#'>Eliminar</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>