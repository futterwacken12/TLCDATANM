@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Master._AddEditContactViewModel
@{
    ViewBag.Title = "Nuevo Contacto";
    ViewBag.PageIcon = "arrow-right";
    Layout = ConstantHelpers.Layout.MODAL_LAYOUT_PATH;
    ViewBag.Form = new ModalFormHelpers("_AddEditContact", "Master", FormMethod.Post);
}

@section Styles
{
    <style>
        form {
            margin: 0 0 0px !important;
        }
    </style>
}

@Html.AntiForgeryToken()
@Html.HiddenFor(x => x.ContactId)
@Html.HiddenFor(x => x.SupplierId)

<div class='control-group'>
    <label class='control-label' for='ItemId'>Rubro</label>
    <div class='controls'>
        @Html.DropDownListFor(x => x.ItemId, new SelectList(Model.LstItem, "ItemId", "Description"), "[-Seleccione-]", new { @class = "select2 span12" })
    </div>
</div>
<div class='control-group'>
    <label class='control-label' for='Name'>Nombre</label>
    <div class='controls'>
        @Html.TextBoxFor(x => x.Name, new { @class = "input-block-level", @placeholder = "Nombre" })
    </div>
</div>
<div class='control-group'>
    <label class='control-label' for='LastName'>Apellido Paterno</label>
    <div class='controls'>
        @Html.TextBoxFor(x => x.LastName, new { @class = "input-block-level", @placeholder = "Apellido Paterno" })
    </div>
</div>
<div class='control-group'>
    <label class='control-label' for='SecondLastName'>Apellido Materno</label>
    <div class='controls'>
        @Html.TextBoxFor(x => x.SecondLastName, new { @class = "input-block-level", @placeholder = "Apellido Materno" })
    </div>
</div>
<div class='control-group'>
    <label class='control-label' for='Phone'>Teléfono</label>
    <div class='controls'>
        @Html.TextBoxFor(x => x.Phone, new { @class = "input-block-level", @placeholder = "Teléfono" })
    </div>
</div>
<div class='control-group'>
    <label class='control-label' for='Email'>Correo Electrónico</label>
    <div class='controls'>
        @Html.TextBoxFor(x => x.Email, new { @class = "input-block-level", @placeholder = "Correo Electrónico" })
    </div>
</div>

@section Footer
{
    <button id="save" type="submit" class="btn btn-primary"><i class="icon icon-save"></i> Guardar</button>
}