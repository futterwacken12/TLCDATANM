@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Store.LstEntryNoteViewModel
@{
    ViewBag.Title = "Lista de notas de ingreso";
    ViewBag.PageIcon = "arrow-left";
}

@section Breadcrumbs{
}

<style>
    .input-append, .input-prepend {
        display: flex !important;
    }
</style>

<div class="row-fluid">
    <div class="span12 box bordered-box green-border">
        <div class="box-header green-background">
            <div class="title">
                <i class="icon-filter"></i>
                Filtros
            </div>
        </div>
        <div class="box-content box-double-padding">
            <form class="form" method="post" style="margin-bottom: 0;">
                <fieldset>
                    <div class="span4">
                        <strong>Código</strong>
                        @Html.TextBoxFor(x => x.Code, new { @class = "span12" })
                    </div>
                    <div class="span4">
                        <strong>Tipo de Movimiento</strong>
                        @Html.DropDownListFor(x => x.MovementTypeId, new SelectList(Model.LstMovementType, "MovementTypeId", "Name"), "[-Seleccione-]", new { @class = "span12" })
                    </div>
                    <div class="span4">
                        <strong>Fecha Pedido</strong>
                        <div class="datepicker input-append" id="datepicker" style="padding-left: 0%; padding: unset;">
                            @Html.TextBoxFor(x => x.Date, new { @class = "input-block-level", @placeholder = "Fecha Pedido", @data_format = "dd/MM/yyyy" })
                            <span class="add-on">
                                <i data-date-icon="icon-calendar" data-time-icon="icon-time" class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </fieldset>

                <hr class="hr-normal">

                <div class="form-actions" style="margin-bottom: 0;">
                    <div class="text-right">
                        <button class="btn btn-primary"><i class="icon-filter"></i> Filtrar</button>
                        <a href="@Url.Action("ListEntryNote", "Store")" class="btn btn-default"><i class="icon-eraser"></i> Limpiar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="col-lg-6">
        <div class="pull-left">
            @Html.EncodedActionLink(Html.Raw("<i class='icon icon-arrow-left'></i> Atrás"), "MainOption", "Home", "Intranet", new { FatherId = Model.FatherId }, new { @class = "'btn'" })
            @Html.EncodedActionLink(Html.Raw("<i class='icon icon-plus'></i> Nueva nota de ingreso"), "AddEditEntryNote", "Store", "Intranet", new { }, new { @class = "'btn btn-primary'" })
        </div>
    </div>
</div>
<br />
<div class="row-fluid">
    <div class="span12 box bordered-box green-border" style="margin-bottom:0;">
        <div class="box-header green-background">
            <div class="title"><i class="icon-reorder"></i> Registros</div>
        </div>
        <div class="box-content box-no-padding">
            <div class="responsive-table">
                <div class="scrollable-area">
                    <table class="table table-hover table-striped" style="margin-bottom:0;">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Documento</th>
                                <th>Tipo Movimiento</th>
                                <th>Destino</th>
                                <th>Fecha Registro</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstEntryNote)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.DocumentCode</td>
                                    <td>@item.MovementType.Name</td>
                                    <td>@item.Store.Name</td>
                                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class='btn-group' style='margin-bottom:5px'>
                                            @Html.EncodedActionLink(Html.Raw("<i class='icon icon-eye-open'></i> Ver"), "AddEditEntryNote", "Store", "Intranet", new { EntryNoteId = item.EntryNoteId }, new { @class = "'btn'" })
                                            <button class='btn dropdown-toggle' data-toggle='dropdown'>
                                                <span class='caret'></span>
                                            </button>
                                            <ul class='dropdown-menu'>
                                                @*<li class="divider"></li>*@
                                                <li>
                                                    @Html.EncodedActionLinkModal(Html.Raw("<i class='icon icon-trash'></i> Eliminar"), "_DeleteEntryNote", "Store", "Intranet", new { EntryNoteId = item.EntryNoteId }, new { })
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <tr style="visibility:hidden"><td colspan="6">&nbsp;</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="col-lg-6" style="padding-top: 20px;">
        <div class="pull-right">
            @Html.PagedListPager(Model.LstEntryNote, Page => Url.Action("LstEntryNote", new { Page = Page, State = Model.State, Date = Model.Date, MovementTypeId = Model.MovementTypeId, Code = Model.Code }), ConstantHelpers.Bootstrap3Pager)
        </div>
    </div>
</div>