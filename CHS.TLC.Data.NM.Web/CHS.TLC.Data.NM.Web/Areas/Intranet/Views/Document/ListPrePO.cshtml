@model CHS.TLC.Data.NM.Web.Areas.Intranet.ViewModels.Document.ListPrePOViewModel
@{
    ViewBag.Title = "Lista de Pre Purchase Orders";
    ViewBag.PageIcon = "file-alt";
}

@section Breadcrumbs{
}

<div class="row-fluid">
    <div class="span12 box bordered-box green-border">
        <div class="box-header green-background">
            <div class="title">
                <i class="icon-filter"></i>
                Filtros
            </div>
        </div>
        <div class="box-content box-double-padding">
            <form class="form" style="margin-bottom: 0;">
                <fieldset>
                    <div class="span2">
                        <strong>Código</strong>
                        @Html.TextBoxFor(x => x.Code, new { @class = "span12" })
                    </div>
                    <div class="span4">
                        <strong>Proveedor</strong>
                        @Html.DropDownListFor(x => x.SupplierId, new SelectList(Model.LstSupplier, "SupplierId", "BussinessName"), "[-Seleccione-]", new { @class = "select2 span12" })
                    </div>
                    <div class="span3">
                        <strong>Fecha Pedido</strong>
                        <div class="">
                            <div class="datepicker input-append" id="datepicker" style="padding-left: 0%; padding: unset;">
                                @Html.TextBoxFor(x => x.OrderDate, new { @class = "input-block-level", @placeholder = "Fecha Pedido", @data_format = "dd/MM/yyyy" })
                                <span class="add-on">
                                    <i data-date-icon="icon-calendar" data-time-icon="icon-time" class="icon-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <strong>Proforma</strong>
                        @Html.TextBoxFor(x => x.OrderDate, new { @class = "span12" })
                    </div>
                </fieldset>

                <hr class="hr-normal">

                <div class="form-actions" style="margin-bottom: 0;">
                    <div class="text-right">
                        <div class="btn btn-primary">
                            <i class="icon-save"></i>
                            Filtrar
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr />

<div class="row-fluid">
    <div class="col-lg-12" style="padding-bottom: 4%">
        <div class="pull-left">
            @Html.EncodedActionLink(Html.Raw("<i class='icon icon-plus'></i> Nueva Pre P.O."), "AddEditPrePO", "Document", "Intranet", new { }, new { @class = "'btn btn-primary'" })
        </div>
    </div>
</div>


<div class="row-fluid">
    <div class="span12 box bordered-box green-border" style="margin-bottom:0;">
        <div class="box-header green-background">
            <div class="title"><i class="icon-reorder"></i> Registros</div>
        </div>
        <div class="box-content box-no-padding">
            <div class="responsive-table">
                <div class="scrollable-area">
                    <table class="table table-bordered table-hover table-striped" style="margin-bottom:0;">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Fecha Registro</th>
                                <th>Fecha Pedido</th>
                                <th>Proveedor</th>
                                <th>Email Proveedor</th>
                                <th>Nombre Documento</th>
                                <th>Documento</th>
                                <th></th>
                                <th>Opción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prePurcherseOrder in Model.LstPrePO)
                            {
                                <tr>
                                    <td>@prePurcherseOrder.Code</td>
                                    <td>@prePurcherseOrder.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                    <td>@prePurcherseOrder.DateOrder.ToString("dd/MM/yyyy")</td>
                                    <td>@prePurcherseOrder.Supplier.BussinessName</td>
                                    <td>@prePurcherseOrder.SendSupply</td>
                                    <td>@prePurcherseOrder.DocumentName</td>
                                    <td class="text-center">
                                        @if (!String.IsNullOrEmpty(prePurcherseOrder.DocumentName))
                                        {
                                            @Html.EncodedActionLink(Html.Raw("<i class='icon-file'></i> Descargar"), "DownloadDocumentPrePO", "Document", "Intranet", new { PrePurcherseOrderId = prePurcherseOrder.PrePurcherseOrderId }, new { @target = "_blank" })
                                        }
                                    </td>
                                    <td>
                                        @Html.EncodedActionLinkModal(Html.Raw("<i class='icon icon-plus'></i> Proforma"), "_AddEditDocumentPrePO", "Document", "Intranet", new { PrePurcherseOrderId = prePurcherseOrder.PrePurcherseOrderId }, new { @class="'btn btn-warning'"})
                                    </td>
                                    <td>
                                        <div class='btn-group' style='margin-bottom:5px'>
                                            @Html.EncodedActionLink(Html.Raw("<i class='icon icon-edit'></i> Editar"), "AddEditPrePO", "Document", "Intranet", new { PrePurcherseOrderId = prePurcherseOrder.PrePurcherseOrderId }, new { @class = "'btn'" })
                                            <button class='btn dropdown-toggle' data-toggle='dropdown'>
                                                <span class='caret'></span>
                                            </button>
                                            <ul class='dropdown-menu'>
                                                @if (!String.IsNullOrEmpty(prePurcherseOrder.DocumentName))
                                                {
                                                    <li>
                                                        @Html.EncodedActionLink(Html.Raw("<i class='icon-check-sign'></i> Generar P.O."), "AddEditPO", "Document", "Intranet", new { PrePurcherseOrderId = prePurcherseOrder.PrePurcherseOrderId }, new { })
                                                    </li>

                                                    <li class="divider"></li>
                                                }
                                                <li>
                                                    @Html.EncodedActionLinkModal(Html.Raw("<i class='icon icon-trash'></i> Eliminar"), "_DeletePrePO", "Document", "Intranet", new { PrePurcherseOrderId = prePurcherseOrder.PrePurcherseOrderId }, new { })
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <tr style="visibility:hidden"><td colspan="5">&nbsp;</td></tr>
                            <tr style="visibility:hidden"><td colspan="5">&nbsp;</td></tr>
                            <tr style="visibility:hidden"><td colspan="5">&nbsp;</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="col-lg-6" style="padding-top: 2%">
        <div class="pull-right">
            @Html.PagedListPager(Model.LstPrePO, Page => Url.Action("ListPrePO", new { Page = Page, Code = Model.Code, OrderDate = Model.OrderDate, SupplierId = Model.SupplierId }), ConstantHelpers.Bootstrap3Pager)
        </div>
    </div>
</div>